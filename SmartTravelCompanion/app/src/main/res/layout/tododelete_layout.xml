<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Search and Delete to do List"
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btnsearch"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/edtxt_search"
        android:onClick="searchtodo"/>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtxt_search"
        android:layout_below="@+id/textView2"
        android:hint="Enter todo title to search here"/>
    <TextView

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_todo_titlesearch"
        android:text="Todo Title"
        android:layout_below="@+id/edtxt_search"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_todo_detailssearch"
        android:text="Todo Details"
        android:layout_below="@+id/edtxt_search"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txt_todo_titlesearch"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_todosearch_title"
        android:text=""
        android:layout_below="@+id/txt_todo_titlesearch"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_todosearch_detail"
        android:text=""
        android:layout_below="@+id/txt_todo_detailssearch"
        android:textColor="#000000"
        android:layout_toRightOf="@id/txt_todo_titlesearch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:text="Delete"
        android:layout_below="@id/txt_todosearch_detail"
        android:onClick="deletetodo"/>

</RelativeLayout>